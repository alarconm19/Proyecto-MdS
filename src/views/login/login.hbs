<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-4 p-4 bg-white border border-light rounded-lg shadow-lg">
            <h1 class="h2 font-weight-bold text-center">Inicia Sesión</h1>

            <form action="/login" method="post" class="mt-4">
                <div class="form-group mb-4">
                    <label for="username">
                        <i class="fas fa-user"></i>
                    </label>
                    <input type="text" name="login" id="login" placeholder="Usuario o Correo electrónico" class="form-control" required>
                </div>

                <div class="form-group mb-4">
                    <label for="password">
                        <i class="fas fa-lock"></i>
                    </label>
                    <input type="password" name="password" id="password" placeholder="Contraseña" class="form-control" required>
                </div>

                <button type="submit" class="btn btn-success btn-block font-weight-bold mb-3">Enviar</button>

                {{#if error}}
                    <p class="text-danger font-weight-bold text-center my-3">*{{error}}</p>
                {{/if}}
            </form>
        </div>
    </div>
</div>
