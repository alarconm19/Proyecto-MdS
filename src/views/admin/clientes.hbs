<div id="layoutSidenav_content" style="background-color: darkgray">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4">Listado de Clientes</h1>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item active">Clientes</li>
            </ol>
            <div class="card mb-4" style="background-color: olivedrab;">
                <div class="card-header">
                    <i class="fas fa-table me-1"></i>
                    Tabla de Clientes
                </div>
                <div class="card-body">
                    <table id="datatablesSimple" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nombre</th>
                                <th>Email</th>
                                <th>Teléfono</th>
                                <th>Dirección</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each clientes}}
                                <tr>
                                    <td>{{this.user_id}}</td>
                                    <td>{{this.username}}</td>
                                    <td>{{this.email}}</td>
                                    <td>{{this.telefono}}</td>
                                    <td>{{this.direccion}}</td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
    {{> footerAdmin}}
</div>
