<div id="layoutSidenav_content" style="background-color: darkgrey;">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4">Listado de Turnos por DÃ­a</h1>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item active">Turnos del {{fecha}}</li>
            </ol>
            <!-- Formulario para seleccionar la fecha -->
            <form action="/admin/turnosPorDia" method="GET" class="mb-4">
                <div class="form-group">
                    <label for="fecha">Seleccionar Fecha:</label>
                    <input type="date" id="fecha" name="fecha" value="{{fecha}}" required>
                    <button type="submit" class="btn btn-primary">Ver Turnos</button>
                </div>
            </form>
            <div class="card mb-4" style="background-color: olivedrab;">
                <div class="card-header">
                    <i class="fas fa-calendar me-1"></i>
                    Turnos Programados
                </div>
                <div class="card-body">
                    <table id="datatablesSimple" class="table table-striped table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>ID Turno</th>
                                <th>Cliente</th>
                                <th>Profesional</th>
                                <th>Servicio</th>
                                <th>Fecha</th>
                                <th>Hora</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each turnos}}
                            <tr>
                                <td>{{id}}</td>
                                <td>{{apellidoCliente}}, {{nombreCliente}} ({{cliente}})</td>
                                <td>{{apellidoProfesional}}, {{nombreProfesional}} ({{profesional}})</td>
                                <td>{{servicio}}</td>
                                <td>{{fecha}}</td>
                                <td>{{hora}}</td>
                            </tr>
                            {{else}}
                            <tr>
                                <td colspan="7" class="text-center">No hay turnos para mostrar.</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
    {{> footerAdmin}}
</div>
