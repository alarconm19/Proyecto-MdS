<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4">Turnos por Profesional</h1>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item active">Turnos por Profesional</li>
            </ol>
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-table me-1"></i>
                    Lista de Turnos por Profesional
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Profesional</th>
                                    <th>Cliente</th>
                                    <th>Servicio</th>
                                    <th>Fecha</th>
                                    <th>Hora</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each turnos}}
                                <tr>
                                    <td>{{this.profesional}}</td>
                                    <td>{{#if this.cliente}}{{this.cliente}}{{else}}Sin Cliente{{/if}}</td>
                                    <td>{{#if this.servicio}}{{this.servicio}}{{else}}Sin Servicio{{/if}}</td>
                                    <td>{{#if this.fecha}}{{this.fecha}}{{else}}--{{/if}}</td>
                                    <td>{{#if this.hora}}{{this.hora}}{{else}}--{{/if}}</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <footer class="py-4 bg-light mt-auto">
        <div class="container-fluid px-4">
            <div class="d-flex align-items-center justify-content-between small">
                <div class="text-muted">Copyright &copy; Grupo 19 2024</div>
                <div>
                    <a href="#">Privacy Policy</a>
                    &middot;
                    <a href="#">Terms &amp; Conditions</a>
                </div>
            </div>
        </div>
    </footer>
</div>