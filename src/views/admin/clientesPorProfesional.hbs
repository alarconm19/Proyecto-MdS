<div id="layoutSidenav_content" style="background-color: darkgrey;">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4">Turnos por Profesional</h1>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item active">Turnos por Profesional</li>
            </ol>
            <!-- Formulario para seleccionar el profesional -->
            <form action="/admin/clientes-profesional" method="GET" class="mb-4">
                <div class="form-group">
                    <label for="profesional">Seleccionar Profesional:</label>
                    <select id="profesional" name="profesional" class="form-control" required>
                        <option value="">Todos los Profesionales</option>
                        {{#each profesionales}}
                        <option value="{{this.username}}">{{this.nombre}} {{this.apellido}}</option>
                        {{/each}}
                    </select>
                    <button type="submit" class="btn btn-primary mt-2">Filtrar</button>
                </div>
            </form>
            <div class="card mb-4" style="background-color: olivedrab;">
                <div class="card-header">
                    <i class="fas fa-table me-1"></i>
                    Lista de Turnos por Profesional
                </div>
                <div class="card-body" style="background-color: olivedrab;">
                    <div class="table-responsive">
                        <table id="dataTable" class="table table-striped table-bordered" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Profesional</th>
                                    <th>Cliente</th>
                                    <th>Servicio</th>
                                    <th>Fecha</th>
                                    <th>Hora</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each turnos}}
                                <tr>
                                    <td>{{this.apellidoProfesional}}, {{this.nombreProfesional}} ({{this.profesional}})
                                    </td>
                                    <td>{{#if this.cliente}}{{this.apellidoCliente}}, {{this.nombreCliente}}
                                        ({{this.cliente}}){{else}}Sin Cliente{{/if}}</td>
                                    <td>{{#if this.servicio}}{{this.servicio}}{{else}}Sin Servicio{{/if}}</td>
                                    <td>{{#if this.fecha}}{{this.fecha}}{{else}}--{{/if}}</td>
                                    <td>{{#if this.hora}}{{this.hora}}{{else}}--{{/if}}</td>
                                </tr>
                                {{else}}
                                <tr>
                                    <td colspan="5" class="text-center">No hay turnos para mostrar.</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </main>
    {{> footerAdmin}}
</div>