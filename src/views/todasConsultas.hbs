<div class="container fondo1 my-5">
    <h2 class="text-center">Todas las Consultas</h2>
    {{#if (eq userRole 'empleado')}}
        <div class="row">
            <div class="col-md-12">
                <ul class="list-group">
                    {{#each consultas}}
                        <li class="list-group-item">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="mb-1">Consulta de: {{this.username}}</h5>
                                    <p class="mb-1">{{this.consulta}}</p>
                                    <small>Estado: {{#if this.respuesta}}<span class="text-success">Respondida</span>{{else}}<span class="text-danger">Pendiente</span>{{/if}}</small>
                                </div>
                                <div>
                                    {{#if (eq this.respuesta null)}}
                                        <form action="/responder/{{this.consulta_id}}" method="POST" class="form-inline">
                                            <textarea class="form-control mb-2 mr-sm-2" name="respuesta" rows="1" required placeholder="Escribe tu respuesta"></textarea>
                                            <button type="submit" class="btn btn-success">Responder</button>
                                        </form>
                                    {{else}}
                                        <div class="alert alert-info" role="alert">
                                            Respuesta: {{this.respuesta}}
                                        </div>
                                    {{/if}}
                                </div>
                            </div>
                        </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    {{else}}
        <div class="alert alert-danger" role="alert">
            Acceso denegado. Solo los empleados pueden ver esta p√°gina.
        </div>
    {{/if}}
</div>
